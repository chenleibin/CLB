#include <stdio.h>

int main() {
    int n, sum = 0, fact = 1;
    // 输入 n
    printf("请输入一个正整数 n: ");
    scanf("%d", &n);

    // 使用 for 循环计算阶乘并累加
    for (int i = 1; i <= n; i++) {
        fact *= i; // 计算当前的阶乘
        sum += fact; // 累加到总和
        printf("%d! = %d\n", i, fact);
    }
    // 输出总和
    printf("1! + 2! + ... + %d! = %d\n", n, sum);
    return 0;
}