#include <stdio.h>
#include <string.h>

// 定义学生信息结构体
typedef struct {
    char name[20];
    char id[10];
    int score;
    char idCard[10]; // 身份证号字段
} Student;

// 定义学生信息数组
Student students[] = {
    {"张三", "20240502", 84, ""},
    {"李四", "20240506", 63, "0505868"},
    {"李五", "20240508", 59, "0604953"},
    {"王晓", "20240510", 62, "0304862"},
    {"Ms","20240640", 52,"0604985"}
};

void queryByNameAndID();
void queryByIDCard();

int main() {
    int choice;

    printf("欢迎使用学生信息管理系统！\n");
    while (1) {
        printf("\n请选择查询方式：\n");
        printf("1. 根据姓名和学号查询\n");
        printf("2. 根据身份证号查询\n");
        printf("3. 退出\n");
        printf("请输入选项（1-3）：");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                queryByNameAndID();
                break;
            case 2:
                queryByIDCard();
                break;
            case 3:
                printf("程序已退出。\n");
                return 0;
            default:
                printf("无效选项，请重新输入。\n");
        }
    }
    return 0;
}

// 根据姓名和学号查询
void queryByNameAndID() {
    char inputName[20], inputID[10];
    int found = 0;

    printf("\n请输入您的姓名：");
    scanf("%s", inputName);
    printf("请输入您的学号：");
    scanf("%s", inputID);

    for (int i = 0; i < sizeof(students) / sizeof(students[0]); i++) {
        if (strcmp(inputName, students[i].name) == 0 && strcmp(inputID, students[i].id) == 0) {
            found = 1;
            if (students[i].score >= 60) {
                printf("您的成绩为：%d\n", students[i].score);
            } else {
                printf("您的成绩不合格需补考。\n");
            }
            break;
        }
    }

    if (!found) {
        printf("error: 学生信息不存在或姓名与学号不匹配！\n");
    }
}

// 根据身份证号查询
void queryByIDCard() {
    char inputIDCard[10];
    int found = 0;

    printf("\n请输入您的身份证号：");
    scanf("%s", inputIDCard);

    // 管理员权限
    if (strcmp(inputIDCard, "888888") == 0) {
        printf("\n管理员权限已开启，以下是所有学生的成绩信息：\n");
        printf("---------------------------------\n");
        for (int i = 0; i < sizeof(students) / sizeof(students[0]); i++) {
            printf("姓名：%s，成绩：%d\n", students[i].name, students[i].score);
        }
        printf("---------------------------------\n");
        return;
    }

    // 普通用户查询
    for (int i = 0; i < sizeof(students) / sizeof(students[0]); i++) {
        if (strcmp(inputIDCard, students[i].idCard) == 0) {
            found = 1;
            if (students[i].score >= 60) {
                printf("您的成绩为：%d\n", students[i].score);
            } else {
                printf("您的成绩不合格需补考。\n");
            }
            break;
        }
    }

    if (!found) {
        printf("error: 学生信息不存在或身份证号不匹配！\n");
    }
}